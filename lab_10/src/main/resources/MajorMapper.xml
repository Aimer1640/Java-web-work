<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.MajorMapper">
<!--	2040706101 杨艾琳-->
<!--	//添加专业-->
	<insert id="addMajor" parameterType="major">
		insert into tb_major(major_id,major_name,tuition,dept_id) values(#{majorId},#{majorName},#{tuition},#{deptId})
	</insert>
<!--	//更新专业-->
	<update id="updateMajor" parameterType="major">
		update tb_major set major_name=#{majorName},tuition=#{tuition},dept_id=#{deptId} where major_id=#{majorId}
	</update>
<!--	//删除专业-->
	<delete id="deleteMajorById" parameterType="string">
		delete from tb_major where major_id=#{majorId}
	</delete>
<!--	//根据id查询专业-->
	<select id="findMajorById" parameterType="string" resultType="major">
		select * from tb_major where major_id=#{majorId}
	</select>
<!--	//查询所有专业-->
	<select id="findAllMajor" resultType="major">
		select * from tb_major
	</select>
</mapper>
